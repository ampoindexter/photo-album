doctype html
html
  head
    title Game Trade
    link(rel='stylesheet', href='/bower_components/bootswatch-dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bower_components/sweetalert/dist/sweetalert.css')
    link(rel='stylesheet', href='/css/style.css')
    block styles

   body
    nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Picturesque
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
            if user
              li
                a(href='/addAlbum') Create New Album
          ul.nav.navbar-nav.navbar-right
            if !user
              li
                a(href='/register') Register
              li
                a(href='/login') Login
            else
              li
                a(href='/users/profile')= 'Logged in as ' + user.firstname
              li
                a(href='/users/logout') Logout
              li
                a(href='/albums/mine') My Albums

    .container
      block content

    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/bootswatch-dist/js/bootstrap.min.js')
    script(src='/bower_components/sweetalert/dist/sweetalert.min.js')
